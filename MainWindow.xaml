<Window x:Class="WpfAppLists.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfAppLists"
        Title="Product List" Height="450" Width="800">
    <Grid>
        <!-- Заголовок -->
        <TextBlock Text="Список товаров" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,0" />

        <!-- Список продуктов -->
        <ListBox x:Name="ProductList" Margin="10,50,10,10" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <local:UserControl1/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>